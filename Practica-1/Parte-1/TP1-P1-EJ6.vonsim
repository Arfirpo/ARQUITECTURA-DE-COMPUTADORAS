;6a)
                ORG 1000H

MSJ             DB "Ingrese un caracter: ",0AH
MSJ2            DB 0AH,"Fin del Programa."
PUNTO           DB "."
ASTERISCO       DB "*"
CANT            DB ?
CAR             DB ?

                ORG 2000H              
                MOV AL, OFFSET MSJ2 - OFFSET MSJ
                MOV BX, OFFSET MSJ
                INT 7
                MOV CL, 0
                MOV AL, 1
SIGO:           MOV BX, OFFSET CAR
                INT 6
                MOV BX, OFFSET ASTERISCO
                INT 7
                CMP CAR,2EH
                JZ FIN
                INC CL
                JMP SIGO
FIN:            MOV CANT, CL
                MOV AL, OFFSET PUNTO - OFFSET MSJ2
                MOV BX, OFFSET MSJ2
                INT 7
                HLT
END

