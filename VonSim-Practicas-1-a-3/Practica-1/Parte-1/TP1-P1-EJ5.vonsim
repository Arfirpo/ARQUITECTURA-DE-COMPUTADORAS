; Ejercicio 5c
		ORG 1000H
NUM   		DB "0"			
ENTER		DB 10

		ORG 2000H
		MOV AL, 1
MOSTRAR: 	MOV BX, OFFSET NUM
		INT 7
		MOV BX, OFFSET ENTER
		INT 7
		CMP NUM, 39H		; ultimo codigo imprimible
		JZ FIN
		INC NUM
		JMP MOSTRAR
FIN: 		HLT
END