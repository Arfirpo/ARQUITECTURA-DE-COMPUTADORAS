; Ejercicio 5B2
		ORG 1000H
LETRA 		DB 32			;primer codigo imprimible
		ORG 2000H
		MOV BX, OFFSET LETRA
		MOV AL, 1
MOSTRAR: 	INT 7
		CMP LETRA, 126 		; ultimo codigo imprimible
		JZ FIN
		INC LETRA
		JMP MOSTRAR
FIN: 		HLT
END
