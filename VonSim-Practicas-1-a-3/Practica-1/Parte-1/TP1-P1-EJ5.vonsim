;Ejercicio 5A - Mostrar Caracteres Individuales

		ORG 1000H
c		DB 41H

		ORG 2000H
		MOV BX, OFFSET c
		MOV AL, 1
SIGO:		INT 7
		CMP C, 5AH
		JZ FIN
		INC BYTE PTR [BX]
		JMP SIGO
FIN:		HLT
END
